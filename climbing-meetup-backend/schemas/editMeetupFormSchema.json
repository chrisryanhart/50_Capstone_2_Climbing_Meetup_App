{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "format": "date"
      },
      "time": {
        "type": "string",
        "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]\\s[AP][M]$"
      },
      "duration": {
        "type": "number",
        "minimum": 1,
        "maximum": 12
      },
      "location_id": {
        "type": "integer",
        "minimum": 1
      },
      "description": {
        "type": "string",
        "minLength": 10,
        "maxLength": 100
      }
    },
    "additionalProperties": false,
    "required": [
      "date",
      "time",
      "duration",
      "location_id",
      "description"
    ]
  }