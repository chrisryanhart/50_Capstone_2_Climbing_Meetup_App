{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "minimum": 1
      },
      "time": {
        "type": "string"
      },
      "duration": {
        "type": "number",
        "minimum": 1,
        "maximum": 12
      },
      "description": {
        "type": "string",
        "minLength": 5,
        "maxLength": 100
      }
    },
    "additionalProperties": true,
    "required": [
      "date",
      "time",
      "duration",
      "location_id",
      "description"
    ]
  }